<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.jiyun.mapper.StudentMapper">


    <select id="selectListTableData" resultType="cn.jiyun.pojo.Student">
        select ts.*,tm.name major
        from db_major.tb_student ts join db_major.tb_major tm on ts.mid = tm.id
        <where>
            <if test="name!=null and name!=''">
                and ts.name like concat('%',#{name},'%')
            </if>
        </where>
    </select>
</mapper>